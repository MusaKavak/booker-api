{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2022",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "ESNext"
        ],
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "./src/*",
            ],
            "utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "include": [
        "./src",
        "./src/**/*.ts"
    ],
    "exclude": []
}